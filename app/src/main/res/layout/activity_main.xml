        <TextView
            android:id="@+id/test_tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_tv"
            android:gravity="left"
            android:paddingLeft="22dp"
            android:text="你噶事大嘎达搜嘎速度噶啥等噶速度噶啥等噶收[猜你要去]"/>

        <TextView
            android:id="@+id/test_tv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_tv_2"
            android:gravity="left"
            android:paddingRight="22dp"
            android:text="你噶事大嘎达搜嘎速度噶啥等噶速度噶啥等噶收[猜你要去]"/>

        <com.example.didi.myapplication.BtsTestLayout
            android:id="@+id/operation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</com.jakewharton.scalpel.ScalpelFrameLayout>